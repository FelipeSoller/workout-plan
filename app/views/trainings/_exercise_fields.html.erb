<div class="nested-fields">
  <%= f.hidden_field :_destroy %>
  <table class="table">
    <thead>
      <tr>
        <th class="col"><%= f.label :name %></th>
        <th class="col"><%= f.label :sets %></th>
        <th class="col"><%= f.label :reps %></th>
        <th class="col"><%= f.label :rest %></th>
        <th class="col"><%= f.label :muscle_group %></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td class="align-middle">          
          <%= f.text_field :name, class: "form-control" %>
        </td>
        <td class="align-middle">          
          <%= f.text_field :sets, class: "form-control", style: "width: 50px;" %>
        </td>
        <td class="align-middle">          
          <%= f.text_field :reps, class: "form-control", style: "width: 50px;" %>
        </td>
        <td class="align-middle">          
          <%= f.text_field :rest, class: "form-control", style: "width: 50px;" %>
        </td>
        <td class="align-middle">          
          <%= f.select :muscle_group,
              options_for_select([
                ['Abdominal', 'Abdominal'],
                ['Bíceps', 'Bíceps'],
                ['Deltóide', 'Deltóide'],
                ['Dorsal', 'Dorsal'],
                ['Gêmeos', 'Gêmeos'],
                ['Gluteo', 'Gluteo'],
                ['Isquiotibial', 'Isquiotibial'],
                ['Oblíquos', 'Oblíquos'],
                ['Peitoral', 'Peitoral'],
                ['Quadríceps', 'Quadríceps'],
                ['Trapézio', 'Trapézio'],
                ['Tríceps', 'Tríceps'],
              ], f.object.muscle_group), {include_blank: "Selecione Grupo"}, { class: "form-control", style: "background: white;" } %>
        </td>
      </tr>
    </tbody>
  </table>
  <div class="btn btn-danger">
    <%= link_to "Remove", '#', class: "remove_fields", style: "text-decoration: none !important; color: white" %>
  </div>
</div>