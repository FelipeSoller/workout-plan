<div class="card my-4 bg-secondary bg-gradient text-center">
  <div class="card-body">
    <h2 class="text-light fw-bold">Log In</h2>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field input-group mb-3">
    <%= f.label :email, class: "input-group-text", style: "width: 200px;" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
  </div>

  <div class="field input-group mb-3">
    <%= f.label :password, class: "input-group-text", style: "width: 200px;" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn btn-success mt-3", style: "width: 110px;" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
