<div class="card text-dark bg-light mb-3 mx-auto" style="max-width: 40rem;">
  <h1 class="card-header">New Teacher</h1>
    <div class="card-body">
      <%= render 'form', teacher: @teacher %>

      <% if user_signed_in? %>
        <%= link_to 'Back', teachers_path, class: "mt-3 btn btn-secondary" %>
      <% else %>
        <%= link_to 'Back', root_path, class: "mt-3 btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>
