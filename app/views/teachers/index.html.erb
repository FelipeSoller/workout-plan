<div class="card text-dark bg-light mb-3 mx-auto" style="max-width: 40rem;">
  <h1 class="card-header">Teachers</h1>
  <div class="card-body">
    <table class="table">
      <thead>
        <tr>
          <th class="col">Nome</th>
          <th colspan="2"></th>
        </tr>
      </thead>
      <tbody>
        <% @teachers.each do |teacher| %>
          <tr>
            <td class="align-middle fw-bold"><%= link_to teacher.name, teacher, style: "text-decoration: none !important;" %></td>
            <td class="d-flex justify-content-end">
              <%= link_to 'Edit', edit_teacher_path(teacher), class: "btn btn-primary btn-sm" %>
              <%= link_to 'Destroy', teacher, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm ms-3" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <%= link_to 'New Teacher', new_teacher_path, class: "btn btn-success" %>
  </div>
</div>